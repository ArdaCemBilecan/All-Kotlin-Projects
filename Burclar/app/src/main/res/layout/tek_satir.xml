<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/tekSatirLayout"
        android:layout_height="match_parent">
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/akrep8"
            android:id="@+id/burcResim"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/tvBurcAdi"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="BurcAdi:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="307dp"
            android:layout_height="37dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tvBurcAdi" android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/burcResim" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Tarih:"
            android:layout_width="309dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="39dp"
            android:id="@+id/tvBurcTarih"
            app:layout_constraintStart_toStartOf="@+id/tvBurcAdi"
            app:layout_constraintTop_toBottomOf="@+id/tvBurcAdi" android:layout_marginTop="8dp"/>

    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@color/colorAccent"
          app:layout_constraintStart_toStartOf="@+id/burcResim"
          app:layout_constraintEnd_toEndOf="@+id/tvBurcAdi" android:id="@+id/tvCizgi"
          app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
          app:layout_constraintTop_toBottomOf="@+id/tvBurcTarih"></View>

</androidx.constraintlayout.widget.ConstraintLayout>

