<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <AutoCompleteTextView
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:id="@+id/etYeniDersAd"
            android:textColor="@color/colorWhite"
            android:popupBackground="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"/>
    <Spinner
            android:layout_width="182dp"
            android:layout_height="31dp"
            android:id="@+id/spnYeniDersNot"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:popupBackground="@color/colorDeneme"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginStart="16dp"
            android:entries="@array/Not"
            app:layout_constraintTop_toBottomOf="@+id/etYeniDersAd"/>
    <Spinner
            android:layout_width="182dp"
            android:layout_height="31dp"
            android:id="@+id/spnYeniDersKredi"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:popupBackground="@color/colorDeneme"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/etYeniDersAd"
            android:entries="@array/Kredi"
            app:layout_constraintStart_toEndOf="@+id/spnYeniDersNot"
            android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnDersSil"
            app:layout_constraintStart_toEndOf="@+id/etYeniDersAd"
            android:background="@drawable/crossicon"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <View android:layout_width="wrap_content"
          android:layout_height="5dp"
          android:background="@color/colorAccent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>